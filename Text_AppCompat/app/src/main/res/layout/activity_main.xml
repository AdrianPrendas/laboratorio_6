<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layoout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/cardview_light_background">

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="correo electrónico"
            android:inputType="textEmailAddress"
            app:layout_column="0"
            app:layout_row="1" />

        <EditText
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID"
            android:inputType="number"
            app:layout_column="1"
            app:layout_row="1" />

        <EditText
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nombre"
            android:inputType="textPersonName"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/ape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="apellido"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/ocup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ocupación"
            android:inputType="text"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="número teléfono"
            android:inputType="phone"
            app:layout_column="0"
            app:layout_row="3" />

        <EditText
            android:id="@+id/dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="direccion de residencia"
            android:inputType="textPersonName"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/registrar"
            android:layout_width="155dp"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/account_check"
            android:textColor="@android:color/white"
            android:onClick="registrar"
            android:text="Registrar"
            app:backgroundTint="@color/colorPrimary"
            app:layout_column="0"
            app:layout_row="12" />

        <Button
            android:id="@+id/verUsu"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/account_group"
            android:text="Ver Usuarios"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/colorAccent"
            app:layout_column="1"
            app:layout_row="12" />


    </android.support.v7.widget.GridLayout>


</android.support.constraint.ConstraintLayout>
